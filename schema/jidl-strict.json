{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "title":       "JIDL",
  "description": "JSON-based Interface Definition Language",
  "version":     "0.1.0",
  "author":      "Volodymyr Shymanskyy",
  "license":     "Apache-2.0",

  "type": "object",
  "properties": {
    "module":       { "type": "string" },
    "@output_dir":  { "type": "string" },
    "@doc":         { "type": "string" },
    "@author":      { "type": "string" },
    "@date":        { "type": "string" },

    "types": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_]*$": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["struct"] },
                "@doc": { "type": "string" },
                "fields": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "type": { "type": "string" }
                    },
                    "required": ["name", "type"],
                    "additionalProperties": false
                  }
                }
              },
              "required": ["type"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["enum"] },
                "items": {
                  "oneOf": [
                    {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    {
                      "type": "object",
                      "additionalProperties": {
                        "oneOf": [
                          { "type": "number" },
                          { "type": "string" },
                          { "type": "boolean" }
                        ]
                      }
                    }
                  ]
                }
              },
              "required": ["type", "items"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["array"] },
                "of": { "type": "string" }
              },
              "required": ["type", "of"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["alias"] },
                "for": { "type": "string" }
              },
              "required": ["type", "for"],
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },

    "interfaces": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_]*$": {
          "title": "Interface",
          "type": "object",
          "properties": {
            "@id":  { "type": "integer" },
            "@doc": { "type": "string"  }
          },
          "patternProperties": {
            "^[A-Za-z][A-Za-z0-9_]*$": {
              "title": "Function",
              "type": "object",
              "properties": {
                "@doc":            { "type": "string"  },
                "@oneway":         { "type": "boolean" },
                "@no_impl":        { "type": "boolean" },
                "@c:ret_status":   { "type": "boolean" },
                "@c:error_val":    { "type": ["number", "string", "boolean"] },
                "@timeout":        { "type": "integer" },
                "args": {
                  "title": "Arguments",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "type": { "type": "string" },
                      "@doc":     { "type": "string"  },
                      "@dir":     { "type": "string",
                                    "enum": [ "in", "out", "inout" ] },
                      "@maxlen":  { "type": "integer" },
                      "@flex":    { "type": "boolean" },
                      "@c:as-ptr": { "type": "boolean" },
                      "@cpp:as-ref": { "type": "boolean" }
                    },
                    "required": ["name", "type"],
                    "additionalProperties": false
                  }
                },
                "returns": {
                  "oneOf": [
                    { "type": "null" },
                    { "type": "string" },
                    {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" }
                      },
                      "required": ["type"],
                      "additionalProperties": false
                    }
                  ]
                }
              },
              "additionalProperties": false
            },
            "additionalProperties": false
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["module", "interfaces"],
  "additionalProperties": false
}
